<Qwadro>
    <Shader id='vs'>
        <Stage>VERTEX</Stage>
        <Include>data/pipeline/stdEnv.inc</Include>
        <Include>data/pipeline/stdView.inc</Include>
        <Resource type='CONSTANT_BUFFER'>sgl_view</Resource>
        <In>vec3 a_xyz</In>
        <![CDATA[
        
        layout(location = 0) in vec3 a_xyz;

        void main()
        {
            vec4 pos = p * v * vec4(a_xyz, 1.0);
            gl_Position = pos;
        }
        ]]>
    </Shader>
    <Shader id='fs'>
        <Stage>FRAGMENT</Stage>
        <Include>data/pipeline/stdEnv.inc</Include>
        <Out>vec4 sgl_rgba</Out>
        <![CDATA[
        
        out vec4 sgl_rgba;

        void main()
        {
            sgl_rgba = vec4(0.1, 0.2, 0.3, 1.0);
        }
        
        ]]>
    </Shader>
    <Pipeline>
        <CullMode>BACK</CullMode>
        <PrimitiveTopology>TRI_LIST</PrimitiveTopology>
        <VertexShader>data/pipeline/test.xsh.xml?vs</VertexShader>
        <Rasterizer>data/pipeline/test.xsh.xml</Rasterizer>
    </Pipeline>
    <Rasterizer>
        <FillMode>SOLID</FillMode>
        <DepthTestEnabled></DepthTestEnabled>
        <DepthWriteEnabled></DepthWriteEnabled>
        <DepthCompareOp>LESS</DepthCompareOp>
        <FragmentShader>data/pipeline/test.xsh.xml?fs</FragmentShader>
    </Rasterizer>
</Qwadro>
